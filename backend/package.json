{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node --env-file .env --experimental-strip-types --no-warnings src/server.ts",
    "dev": "node --env-file .env --experimental-strip-types --no-warnings --watch src/server.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "node --env-file .env --experimental-strip-types --no-warnings src/db/seed.ts",
    "lint": "run-s lint:tsc lint:prettier lint:eslint",
    "lint:eslint": "eslint --fix \"src/**/*.ts\"",
    "lint:prettier": "prettier --write .",
    "lint:tsc": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/cors": "11.0.1",
    "@fastify/multipart": "9.0.3",
    "@google/genai": "1.8.0",
    "drizzle-orm": "0.44.2",
    "fastify": "5.4.0",
    "fastify-type-provider-zod": "5.0.1",
    "postgres": "3.4.7",
    "zod": "3.25.67"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "24.0.8",
    "drizzle-kit": "0.31.4",
    "drizzle-seed": "0.3.1",
    "eslint": "^9.30.1",
    "eslint-plugin-mist3rbru": "^0.6.7",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "typescript": "5.8.3",
    "ultracite": "5.0.27"
  }
}
